@model IEnumerable<Assignments.Models.SanPham>
@using Assignments.Services;
@{
    ViewData["Title"] = "SanPham";
}


<p>
    <a asp-action="CreateSanPham">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
        </svg>
    </a>
</p>
<hr class="container">
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.SanPhamID)*@
                SanPhamID
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Anh)*@
               Ảnh
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Ten)*@
                Tên sản phẩm
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Gia)*@
                Giá
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SoLuongBanDau)*@
                Số lượng Còn
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NhaCungCap)*@
                Nhà cung cấp
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.GhiChu)*@
                Ghi chú
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TrangThai)*@
                Trạng thái
            </th>
            <th>Quản lý sản phẩm</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SanPhamID)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Anh)*@
                    @if (System.IO.Path.GetExtension(item.Anh) == ".jpg" ||
                   System.IO.Path.GetExtension(item.Anh) == ".png" ||
                   System.IO.Path.GetExtension(item.Anh) == ".jpeg" ||
                   System.IO.Path.GetExtension(item.Anh) == ".tiff" ||
                   System.IO.Path.GetExtension(item.Anh) == ".giff")
                    {
                        <img src="/images/@item.Anh" height="30">
                    }
                    else
                    {
                        <span>Ảnh lỗi ròi =))</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongBanDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.TrangThai)*@
                    @if(item.TrangThai == 0)
                    {
                        <p>Hết hàng</p>
                    }
                    else
                    {
                        <p>Còn hàng</p>
                    }
                </td>
            <td>
                    <a href="@Url.Action("EditSanPham", "Home", new { id=item.SanPhamID })" class="btn btn-sm btn-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                        </svg>
                    </a>
                    <a href="@Url.Action("DetailsSanPham", "Home", new { id=item.SanPhamID })" class="btn btn-sm btn-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-ticket-detailed" viewBox="0 0 16 16">
                            <path d="M4 5.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5Zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5ZM5 7a1 1 0 0 0 0 2h6a1 1 0 1 0 0-2H5Z" />
                            <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5ZM1.5 4a.5.5 0 0 0-.5.5v1.05a2.5 2.5 0 0 1 0 4.9v1.05a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-1.05a2.5 2.5 0 0 1 0-4.9V4.5a.5.5 0 0 0-.5-.5h-13Z" />
                        </svg>
                    </a>
                    <a href="@Url.Action("DeleteSanPham", "Home", new { id=item.SanPhamID })" class="btn btn-sm btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>