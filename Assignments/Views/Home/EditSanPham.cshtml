@model Assignments.Models.SanPham

@{
    ViewData["Title"] = "EditSanPham";
}
<br />
<div class="row">
    <div class="col-md-5">
        <form asp-action="EditSanPham" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="SanPhamID" type="hidden" class="control-label"></label>*@
                <input asp-for="SanPhamID" type="hidden" class="form-control" />
                <span asp-validation-for="SanPhamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh</label>
                <input type="file" accept="image/*" name="imageFile" asp-for="Anh" class="form-control" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên sản phẩm</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Số lượng ban đầu</label>
                <input asp-for="SoLuongBanDau" class="form-control" />
                <span asp-validation-for="SoLuongBanDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nhà cung cấp</label>
                <input asp-for="NhaCungCap" class="form-control" />
                <span asp-validation-for="NhaCungCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ghi chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Lưu" id="save" class="btn btn-primary" style="background-color: tomato" />
            </div>
        </form>
    </div>
    <div class="col-md-5"><img src="~/Images/@Model.Anh" style="height: 400px; margin-top:30px"></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
